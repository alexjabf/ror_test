.panel.panel-primary.col-lg-9
  =render 'partials/admin/records_per_page'
  %table.table
    %thead
      %tr
        %th Id
        %th Logo
        %th Nombre
        %th Username
        %th Email
        %th Activo
        %th Rol
        %th Acciones

    %tbody
      - @users.each do |user|
        - @model = user
        %tr
          %td= custom_link(controller_name, 'show', user.id, 'btn btn-xs btn-primary')
          %td= image_tag(user.avatar)
          %td= user.full_name
          %td= user.username
          %td= user.email
          %td= t(user.active.to_s)
          %td= custom_link('role', 'show', user.role, nil)
          %td= render 'partials/admin/index_links'
