.theme-panel
  %a.theme-collapse-btn{"data-click" => "theme-panel-expand", :href => "javascript:;"}
    %i.fa.fa-cog
  .theme-panel-content
    %h5.m-t-0 Color Theme
    %ul.theme-list.clearfix
      %li.active
        %a.bg-green{"data-click" => "theme-selector", "data-container" => "body", "data-theme" => "default", "data-title" => "Default", "data-toggle" => "tooltip", "data-trigger" => "hover", :href => "javascript:;"} &nbsp;
      %li
        %a.bg-red{"data-click" => "theme-selector", "data-container" => "body", "data-theme" => "red", "data-title" => "Red", "data-toggle" => "tooltip", "data-trigger" => "hover", :href => "javascript:;"} &nbsp;
      %li
        %a.bg-blue{"data-click" => "theme-selector", "data-container" => "body", "data-theme" => "blue", "data-title" => "Blue", "data-toggle" => "tooltip", "data-trigger" => "hover", :href => "javascript:;"} &nbsp;
      %li
        %a.bg-purple{"data-click" => "theme-selector", "data-container" => "body", "data-theme" => "purple", "data-title" => "Purple", "data-toggle" => "tooltip", "data-trigger" => "hover", :href => "javascript:;"} &nbsp;
      %li
        %a.bg-orange{"data-click" => "theme-selector", "data-container" => "body", "data-theme" => "orange", "data-title" => "Orange", "data-toggle" => "tooltip", "data-trigger" => "hover", :href => "javascript:;"} &nbsp;
      %li
        %a.bg-black{"data-click" => "theme-selector", "data-container" => "body", "data-theme" => "black", "data-title" => "Black", "data-toggle" => "tooltip", "data-trigger" => "hover", :href => "javascript:;"} &nbsp;
    .divider
    .row.m-t-10
      .col-md-5.control-label.double-line Header Styling
      .col-md-7
        %select.form-control.input-sm{:name => "header-styling"}
          %option{:value => "1"} default
          %option{:value => "2"} inverse
    .row.m-t-10
      .col-md-5.control-label Header
      .col-md-7
        %select.form-control.input-sm{:name => "header-fixed"}
          %option{:value => "1"} fixed
          %option{:value => "2"} default
    .row.m-t-10
      .col-md-5.control-label.double-line Sidebar Styling
      .col-md-7
        %select.form-control.input-sm{:name => "sidebar-styling"}
          %option{:value => "1"} default
          %option{:value => "2"} grid
    .row.m-t-10
      .col-md-5.control-label Sidebar
      .col-md-7
        %select.form-control.input-sm{:name => "sidebar-fixed"}
          %option{:value => "1"} fixed
          %option{:value => "2"} default
    .row.m-t-10
      .col-md-5.control-label.double-line Sidebar Gradient
      .col-md-7
        %select.form-control.input-sm{:name => "content-gradient"}
          %option{:value => "1"} disabled
          %option{:value => "2"} enabled
    .row.m-t-10
      .col-md-5.control-label.double-line Content Styling
      .col-md-7
        %select.form-control.input-sm{:name => "content-styling"}
          %option{:value => "1"} default
          %option{:value => "2"} black
    .row.m-t-10
      .col-md-12
        %a.btn.btn-inverse.btn-block.btn-sm{"data-click" => "reset-local-storage", :href => "page_with_mixed_menu.html#"}
          %i.fa.fa-refresh.m-r-3
          Reset Local Storage
/ end theme-panel