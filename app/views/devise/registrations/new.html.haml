/ Projects Row
.row
  .col-lg-12
    %h1.page-header
      Registrate
    %ol.breadcrumb
      %li
        %a{:href => "/"} Inicio
.panel.panel-primary.col-lg-12
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      = f.label :first_name
      %br/
      = f.text_field :first_name, autofocus: true, class: 'form-control', required: true
    .field
      = f.label :last_name
      %br/
      = f.text_field :last_name, autofocus: true, class: 'form-control', required: true
    .field
      = f.label :username
      %br/
      = f.text_field :username, autofocus: true, class: 'form-control', required: true
    .field
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, class: 'form-control', required: true
    .field
      = f.label :password
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} caracteres minimos.)
      %br/
      = f.password_field :password, autocomplete: "off", class: 'form-control', required: true
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true
      = f.hidden_field :role_id, value: Role.find_by_default_user(true).id
      %br
    .actions
      = f.submit "Aceptar", class: 'btn-primary'
.panel.panel-primary.col-lg-12
  = render "devise/shared/links"
