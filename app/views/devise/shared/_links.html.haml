- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    %li
      %img{:alt => "", :src => "/assets/default/img/box-blue.png"}
        = link_to "#{t('devise.links.sign_in')} #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
        %span.menu-button--direction
          %i.fa.fa-angle-right
- if controller_name != 'registrations'
  %li
    %img{:alt => "", :src => "/assets/default/img/box-blue.png"}
      = link_to t('devise.links.sign_up'), new_registration_path(resource_name), title: t('devise.links.sign_up')
      %span.menu-button--direction
        %i.fa.fa-angle-right
- if devise_mapping.recoverable? && controller_name != 'passwords'
  %li
    %img{:alt => "", :src => "/assets/default/img/box-blue.png"}
      = link_to t('devise.links.forgot_pwd'), new_password_path(resource_name), title: t('devise.links.forgot_pwd')
      %span.menu-button--direction
        %i.fa.fa-angle-right
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  %li
    %img{:alt => "", :src => "/assets/default/img/box-blue.png"}
      = link_to t('devise.links.conf_inst'), new_confirmation_path(resource_name), title: t('devise.links.conf_inst')
      %span.menu-button--direction
        %i.fa.fa-angle-right
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  %li
    %img{:alt => "", :src => "/assets/default/img/box-blue.png"}
      = link_to t('devise.links.unlock_inst'), new_unlock_path(resource_name), title: t('devise.links.unlock_inst')
      %span.menu-button--direction
        %i.fa.fa-angle-right
